<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".UpdateActivity">

    <EditText
        android:id="@+id/editTextTitleUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="Update Title"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextAuthorUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Update Author"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextTitleUpdate"
        app:layout_constraintStart_toStartOf="@+id/editTextTitleUpdate"
        app:layout_constraintTop_toBottomOf="@+id/editTextTitleUpdate" />

    <EditText
        android:id="@+id/editTextPagesUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Update Pages"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextAuthorUpdate"
        app:layout_constraintStart_toStartOf="@+id/editTextAuthorUpdate"
        app:layout_constraintTop_toBottomOf="@+id/editTextAuthorUpdate" />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="Update"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextPagesUpdate"
        app:layout_constraintStart_toStartOf="@+id/editTextPagesUpdate"
        app:layout_constraintTop_toBottomOf="@+id/editTextPagesUpdate" />
</androidx.constraintlayout.widget.ConstraintLayout>